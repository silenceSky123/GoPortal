            android:orientation="horizontal">

        <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:weightSum="1"
                        android:background="@color/backgroud"
                        android:gravity="center"
                        android:id="@+id/menu">
