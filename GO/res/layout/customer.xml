		            android:layout_width="200dp"
		            android:layout_height="wrap_content"
		            android:text="@string/CustomerInfo"
		            android:textColor="@color/NavigationColor"
		            android:textSize="16sp"
		            android:textStyle="bold"/>
	    </LinearLayout>
	    
